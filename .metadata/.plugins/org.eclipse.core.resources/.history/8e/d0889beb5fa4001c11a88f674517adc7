package com.webkorps.Dao;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;

import com.webkorps.model.Alien;
public class AlienDao {

	public Alien getAlien(int aid)
		{
		Alien a=new Alien();
		try{
			Class.forName("com.mysql.jdbc.Driver");
			Connection con=DriverManager.getConnection("jdbc:mysql://localhost:3306/Mvc","root","1234");
		PreparedStatement ps=con.prepareStatement("select * from Maven where aid= ?");
		ps.setInt(0, aid);
		ResultSet rs=ps.executeQuery();
		if(rs.next())
		{
		a.setAid(rs.getInt(aid));
		a.setAname(rs.getString("aname"));
		a.setTech(rs.getString("tech"));
		}
		}
		catch(Exception e)
		{
			System.out.print(e);
		}
		return a;
		
		}
	
}

